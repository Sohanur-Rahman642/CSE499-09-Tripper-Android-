<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickOnPlaceByGuide">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/white_toolbar"
                android:id="@+id/white_tool"/>

            <ImageView
                android:id="@+id/back_button_for_adding_packages"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/back"
                android:layout_margin="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Tours"
                android:layout_toRightOf="@+id/back_button_for_adding_packages"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="14dp"/>


            <android.support.v7.widget.CardView
                android:id="@+id/add_photoes_cardview1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/white_tool"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/purandhaka"

                    >

                    <!--<Button
                        android:id="@+id/add_photoes_button1"
                        android:layout_width="78dp"
                        android:layout_height="74dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_add_a_photo_black_24dp"/>-->






                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <!--<EditText
                android:id="@+id/package_name_ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_photoes_cardview1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter Package Name"
                android:textColorHint="#838282"
                android:textAlignment="center"
                android:textSize="20sp"

                />-->



            <TextView
                android:id="@+id/package_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_photoes_cardview1"
                android:text="Puran Dhaka"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginLeft="150dp"
                android:textStyle="bold"
                android:drawableRight="@drawable/edit"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/package_name1"
                android:layout_margin="5dp"
                android:text="Old Dhaka (in Bengali, পুরনো ঢাকা ) is a term used to refer to the historic old city of Dhaka, the capital of Bangladesh.[1] It was founded in 1608 as Jahangir Nagar, the capital of Mughal Bengal. It is located on the banks of the Buriganga River. It was one of the largest and most prosperous cities of South Asia and the center of the worldwide muslin trade.Old Dhaka is famous for its variety of foods and amicable living of people of all religion in harmony."/>


            <TextView
                android:id="@+id/start_date_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:layout_below="@id/description"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/date"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_date_tv1"
                android:text="20 March, 2019"
                android:textStyle="bold"
                android:layout_marginLeft="38dp"/>


            <TextView
                android:id="@+id/start_time_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:layout_below="@id/description"
                android:layout_toRightOf="@id/start_date_tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="95dp"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/start_time"/>

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time_tv1"
                android:text="12:00 p.m."
                android:layout_toRightOf="@id/end_date_tv1"
                android:textStyle="bold"
                android:layout_marginLeft="115dp"/>





            <TextView
                android:id="@+id/end_date_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish Date"
                android:layout_below="@id/date1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/flight"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_date_tv1"
                android:text="21 March, 2019"
                android:textStyle="bold"
                android:layout_marginLeft="38dp"/>

            <TextView
                android:id="@+id/end_time_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish Time"
                android:layout_below="@id/time1"
                android:layout_toRightOf="@id/end_date_tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="86dp"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/finish_time"

                />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_time_tv1"
                android:text="6.00 p.m."
                android:layout_toRightOf="@id/end_date_tv1"
                android:textStyle="bold"
                android:layout_marginLeft="115dp"/>


            <TextView
                android:id="@+id/location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_below="@id/date2"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dp"


                />

            <TextView
                android:id="@+id/location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location1"
                android:text="Ahsan Manjil"
                android:textStyle="bold"
                android:layout_marginLeft="38dp"/>

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour Price"
                android:layout_below="@id/time2"
                android:layout_toRightOf="@id/location1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="106dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
            <!--android:drawableLeft="@drawable/ic_attach_money_black_24dp"-->

            />

            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price1"
                android:text="1600 Tk"
                android:layout_toRightOf="@+id/end_date_tv1"
                android:textStyle="bold"
                android:layout_marginLeft="115dp"/>

            <TextView
                android:id="@+id/meetpoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Point"
                android:layout_below="@id/location2"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/meeting_point"
                android:drawablePadding="5dp"


                />

            <TextView
                android:id="@+id/meetingpoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meetpoint1"
                android:text="Malibagh"
                android:textStyle="bold"
                android:layout_marginLeft="38dp"/>

            <TextView
                android:id="@+id/group_members1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Members"
                android:layout_below="@id/price2"
                android:layout_toRightOf="@id/meetpoint1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/group_members"

                />

            <TextView
                android:id="@+id/groupmember1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_members1"
                android:text="Max 5 persons"
                android:layout_toRightOf="@id/end_date_tv1"
                android:textStyle="bold"
                android:layout_marginLeft="115dp"/>






            <Button
                android:id="@+id/update1"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_package_update"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_below="@id/meetingpoint1"
                android:layout_marginTop="12dp"


                android:layout_centerHorizontal="true"

                />


            <Button
                android:id="@+id/delete1"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update1"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:text="Delete"
                android:textColor="@color/white"
                android:background="@drawable/button_package_delete"
                />




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>