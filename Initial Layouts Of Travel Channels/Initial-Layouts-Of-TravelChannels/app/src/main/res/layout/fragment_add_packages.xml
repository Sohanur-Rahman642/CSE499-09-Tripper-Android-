<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/add_photoes_cardview"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:background="@color/SkyBlue"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/SkyBlue"


                    >

                    <Button
                        android:id="@+id/add_photoes_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_style_add_photoes_pc"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Add Photoes"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"

                        />




                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <EditText
                android:id="@+id/package_name_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_photoes_cardview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter Package Name"
                android:textColorHint="#838282"
                android:textAlignment="center"
                android:textSize="20sp"

                 />

            <TextView
                android:id="@+id/start_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:layout_below="@id/package_name_ed"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/Darken"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_start_time_black_24dp"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:layout_below="@id/package_name_ed"
                android:layout_toRightOf="@id/start_date_tv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="85dp"
                android:textColor="@color/Darken"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/end_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish Date"
                android:layout_below="@id/start_date_tv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"

                android:textColor="@color/Darken"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_end_time_black_24dp"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish Time"
                android:layout_below="@id/start_time_tv"
                android:layout_toRightOf="@id/end_date_tv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="76dp"
                android:textColor="@color/Darken"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_below="@id/end_date_tv"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/Darken"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"

                />

            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:layout_below="@id/location"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/Darken"
                android:drawableLeft="@drawable/ic_details_black_24dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/guides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guides"
                android:layout_below="@id/details"
                android:layout_marginTop="10dp"
                android:textColor="@color/Darken"
                android:drawableLeft="@drawable/ic_guides_black_24dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"

                />


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_styles_black"
                android:text="Create Packages"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_below="@id/guides"
                android:layout_marginTop="30dp"
               android:layout_centerHorizontal="true"

                />







        </RelativeLayout>

    </ScrollView>

</RelativeLayout>