<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Package_Creation_Activity">



    <RelativeLayout
        android:id="@+id/layout_add_photoes"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#3fcdf1"
        android:gravity="center"



        >

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
           android:background="@drawable/button_style_add_photoes_pc"
            android:text="+  Add Photoes"
            android:textColor="@color/white"
            android:textAllCaps="false"



            />





    </RelativeLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <EditText

        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/layout_add_photoes"
        android:layout_marginTop="12dp"

        android:background="@drawable/ed_pc_bg"

        android:gravity="center"
        android:hint="Package Name"

        android:textSize="20sp"


        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/layout_add_photoes"


        />


</android.support.constraint.ConstraintLayout>