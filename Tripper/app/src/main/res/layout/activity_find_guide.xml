<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindGuide">

    <include
        android:id="@+id/find_guide_layout"
        layout="@layout/toolbar_for_adding_packages">

    </include>

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/find_guide_layout">


        <TextView
            android:id="@+id/simpleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:text="Search Guide"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/search_box"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_below="@+id/simpleText"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/package_border"
            android:ems="10"
            android:hint="Search"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/simpleText"
            android:layout_toEndOf="@+id/search_box"
            android:background="@color/white"
            android:src="@drawable/searchbtn"
            android:scaleType="centerCrop"/>




    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myLayout"
        android:layout_margin="10dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>