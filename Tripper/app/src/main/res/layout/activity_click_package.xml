<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickPackage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<include layout="@layout/toolbar_for_adding_packages"
                android:id="@+id/toolbar_for_adding_packages1"/>-->

           <!-- <ImageView
                android:id="@+id/back_button_for_adding_packages1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:layout_margin="12dp"
                tools:ignore="VectorDrawableCompat" />-->

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package"
                android:layout_toRightOf="@+id/back_button_for_adding_packages1"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="14dp"/>-->


            <android.support.v7.widget.CardView
                android:id="@+id/cv0"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_margin="0dp"
                android:background="@color/colorPrimary"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"



                    >

                    <ImageView
                        android:id="@+id/clickaddpackagepic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hill"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:id="@+id/back_button_for_adding_packages1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle_black"
                        android:src="@drawable/ic_arrow_back_black_24dp" />




                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/cv0">

            <TextView
                android:id="@+id/clickpackagename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:text="Package Name"
                android:textColor="@color/black"
                android:textStyle="bold"

                android:textAlignment="center"
                android:textSize="22sp"


                />

                <ImageView
                    android:id="@+id/editpackagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="94dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_below="@+id/rl2"
               >

                <TextView
                    android:id="@+id/clickdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:textColor="@color/black"
                    android:textStyle="italic"/>




            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/cv1"
                app:cardCornerRadius="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Start Date"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:textSize="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Start Time"
                            android:layout_marginStart="90dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:drawableLeft="@drawable/timer"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clickstartdate"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 12/13/2019"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="14dp"/>



                    <TextView
                        android:id="@+id/clickstarttime"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 11.20.30 p.m."
                        android:layout_marginStart="120dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="14dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" End Date"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:drawableLeft="@drawable/ic_flight_black_24dp"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" End Time"
                            android:layout_marginStart="90dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:drawableLeft="@drawable/ic_timer_off_black_24dp"
                            android:textSize="16dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/clickenddate"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Date"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="14dp"/>



                        <TextView
                            android:id="@+id/clickendtime"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Time"
                            android:layout_marginStart="120dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="14dp"/>

                    </LinearLayout>


                </LinearLayout>




            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/cv2"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Location"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:textSize="16dp"
                            android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/clicklocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="14dp"
                        android:text="Khagrachori"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text=" Meeting Point"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:drawableLeft="@drawable/meeting_point"
                        android:textSize="16dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/clickmeetpoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="14dp"
                        android:text="Dhaka, Malibagh"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>



                    </LinearLayout>






            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/cv3"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Group Members"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:drawableLeft="@drawable/ic_group_black_24dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Tour Price"
                        android:layout_marginStart="60dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:drawableLeft="@drawable/money"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clickmembers"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 8"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="14dp"/>



                    <TextView
                        android:id="@+id/clickprice"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 10000 Tk"
                        android:layout_marginStart="200dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="14dp"/>

                </LinearLayout>
                </LinearLayout>



            </android.support.v7.widget.CardView>



            <!--<Button
                android:id="@+id/editpackagebtn"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_create_packages"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
              android:layout_below="@id/cv4"
                android:layout_marginTop="40dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"

                />-->

            <Button
                android:id="@+id/deletepackagebtn"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_create_packages"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cv4"

                />

            <Button
                android:id="@+id/confirm_package_btn"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_create_packages"
                android:text="Confirm Trip"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/deletepackagebtn"

                />

            <Button
                android:id="@+id/cancel_package_btn"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_create_packages"
                android:text="Cancel Trip"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cv4"

                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>