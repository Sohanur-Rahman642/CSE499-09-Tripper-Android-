<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingPackages">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/toolbar_for_adding_packages"
                android:id="@+id/toolbar_for_adding_packages"/>

            <ImageView
                android:id="@+id/back_button_for_adding_packages_of_channel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:layout_margin="12dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Package"
                android:layout_toRightOf="@+id/back_button_for_adding_packages_of_channel"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="14dp"/>


            <android.support.v7.widget.CardView
                android:id="@+id/add_photoes_cardview1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/toolbar_for_adding_packages"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"


                    >

                    <ImageView
                        android:id="@+id/channel_add_package_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/hill"/>






                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <EditText
                android:id="@+id/channel_package_name_ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_photoes_cardview1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter Package Name"
                android:textColorHint="#838282"
                android:textAlignment="center"
                android:textSize="20sp"
                android:inputType="textCapWords|textCapSentences"

                />

            <EditText
                android:id="@+id/channel_start_date_tv1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:layout_below="@id/channel_package_name_ed1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:inputType="date"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="5dp"
                android:layout_centerInParent="true"
                />

            <EditText
                android:id="@+id/channel_start_time_tv1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Start Time"
                android:layout_below="@id/channel_end_date_tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:inputType="time"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/timer"
                android:layout_centerInParent="true"/>





            <EditText
                android:id="@+id/channel_end_date_tv1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Finish Date"
                android:layout_below="@id/channel_start_date_tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:inputType="date"

                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_flight_black_24dp"
                android:drawablePadding="5dp"
                android:layout_centerInParent="true"
                />

            <EditText
                android:id="@+id/channel_end_time_tv1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Finish Time"
                android:layout_below="@id/channel_start_time_tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:inputType="time"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_timer_off_black_24dp"
                android:layout_centerInParent="true"

                />


            <EditText
                android:id="@+id/channel_location1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:layout_below="@id/channel_end_time_tv1"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="5dp"
                android:layout_centerInParent="true"


                />

            <EditText
                android:id="@+id/channel_price1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Tour Price"
                android:layout_below="@id/channel_location1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/money"
                android:layout_centerInParent="true"

                />


            <com.tiper.MaterialSpinner
                android:id="@+id/channel_select_guide"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Select Guide"
                android:layout_below="@id/channel_price1"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="5sp"
                app:spinnerMode="dialog"

                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"


                android:layout_centerInParent="true"

                tools:text="Guides"
                android:drawableLeft="@drawable/ic_select_white"


                />




            <EditText
                android:id="@+id/channel_meetpoint1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Meeting Point"
                android:layout_below="@id/channel_select_guide"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_wc_black_24dp"
                android:drawablePadding="5dp"
                android:layout_centerInParent="true"


                />

            <EditText
                android:id="@+id/channel_group_members1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Group Members"
                android:layout_below="@id/channel_meetpoint1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:inputType="number"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_group_black_24dp"
                android:layout_centerInParent="true"

                />

            <EditText
                android:id="@+id/channel_details1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Details"
                android:layout_below="@id/channel_group_members1"

                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawablePadding="5dp"


                />






            <Button
                android:id="@+id/channel_createpackage_btn"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_create_packages"
                android:text="Create Package"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_below="@id/channel_details1"
                android:layout_marginTop="40dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"

                />







        </RelativeLayout>

    </ScrollView>

</RelativeLayout>