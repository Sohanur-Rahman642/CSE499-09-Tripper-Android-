<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_grad"
    tools:context=".RegisterAndLogin.LoginUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tripper"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/login_email"
                android:layout_width="340dp"
                android:layout_height="38dp"
                android:hint="Email"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/white"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/email_round"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"/>
            <!--android:layout_marginTop="35dp"-->


            <EditText
                android:id="@+id/login_password"
                android:layout_width="340dp"
                android:layout_height="38dp"
                android:hint="Password"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-light"
                android:textColorHint="@color/white"
                android:background="@drawable/email_round"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="340dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_btn_stroke"
                android:text="Login"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot your login detail? Get help"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/login_forgot_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" signing in."
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="4dp"
                    android:background="@drawable/email_round"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/email_round"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/login_fb_pic"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fbpic" />

                <ImageView
                    android:id="@+id/login_twitter_pic"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:src="@drawable/twitterpic" />

                <ImageView
                    android:id="@+id/login_google_pic"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/googleicon" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="#605E6168"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"/>


            <TextView
                android:id="@+id/login_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign up"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>